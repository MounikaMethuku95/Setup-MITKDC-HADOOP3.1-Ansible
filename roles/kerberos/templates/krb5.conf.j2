# roles/kerberos/templates/krb5.conf.j2

[libdefaults]
  default_realm = {{ realm }}
  dns_lookup_realm = false
  dns_lookup_kdc = false
  ticket_lifetime = 24h
  renew_lifetime = 7d
  forwardable = true
  rdns = false

[realms]
  {{ realm }} = {
    kdc = {{ ansible_fqdn }}
    admin_server = {{ ansible_fqdn }}
  }

[domain_realm]
  .{{ basedn.split(',')[0].split('=')[1] }}.{{ basedn.split(',')[1].split('=')[1] }} = {{ realm }}
  {{ basedn.split(',')[0].split('=')[1] }}.{{ basedn.split(',')[1].split('=')[1] }} = {{ realm }}
