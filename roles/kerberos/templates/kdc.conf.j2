[kdcdefaults]
 kdc_ports = 88
 kdc_tcp_ports = 88

[realms]
 {{ kerberos_realm }} = {
  # LDAP backend
  database_module = openldap_ldapconf
  acl_file = {{ kerberos_db_dir }}/kadm5.acl
  dict_file = /usr/share/dict/words
  admin_keytab = {{ kerberos_db_dir }}/kadm5.keytab
  key_stash_file = {{ kerberos_db_dir }}/.k5.{{ kerberos_realm }}
  max_life = 10h 0m 0s
  max_renewable_life = 7d 0h 0m 0s
 }

[dbmodules]
 openldap_ldapconf = {
  db_library = kldap
  ldap_kerberos_container_dn = {{ kerberos_container_dn }}
  ldap_kdc_dn = {{ kerberos_service_dn }}
  ldap_kadmind_dn = {{ kerberos_service_dn }}
  ldap_service_password_file = {{ kerberos_service_keyfile }}
  ldap_servers = ldap://localhost
  ldap_conns_per_server = 5
 }
