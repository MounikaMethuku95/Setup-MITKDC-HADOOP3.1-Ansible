[kdcdefaults]
 kdc_ports = 88
 kdc_tcp_ports = 88

[realms]
 HADOOP.TEST = {
   database_module = ldap
   acl_file = /var/kerberos/krb5kdc/kadm5.acl
   key_stash_file = /var/kerberos/krb5kdc/.k5.HADOOP.TEST
   admin_keytab = /var/kerberos/krb5kdc/kadm5.keytab
   default_principal_flags = +preauth
 }
 
[dbmodules]
 ldap = {
   db_library = kldap
   ldap_servers = ldap://localhost
   ldap_kerberos_container_dn = ou=Kerberos,dc=hadoop,dc=test
   ldap_kdc_dn = cn=Manager,dc=hadoop,dc=test
   ldap_kadmind_dn = cn=Manager,dc=hadoop,dc=test
   ldap_service_password_file = /var/kerberos/krb5kdc/ldap-service.keyfile
   ldap_conns_per_server = 5
 }
